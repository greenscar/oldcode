<h1><%= @category.name -%></h1>
<ul>
<% @category.recipes.each do |c| %>
<li><%= link_to c.name, :controller => "recipe", :action => "show",:id => c.id -%></li>
<% end %>
</ul>
<hr />

<% if (session[:user] != nil && session[:user].is_admin) %>
<%= link_to "Add new Recipe",{:controller => "recipe", :action => 'new'}, :class=>"button"%>
<% end %>
<%= link_to 'Back', {:action => 'list'}, :class=>"button" %>
